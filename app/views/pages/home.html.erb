<!DOCTYPE html>

<html>

  <head>

  </head>

  <body>
    <h1> The Display of all Cats, Users, and Todos in the Database </h1>

    <h2> Cats </h2>
    <% @cats.each do |c| %>
      Name: <%= c.name %>
    <% end %>

    <h2> Users </h2>
    <% @users.each do |u| %>
      Username: <%= u.username %>
      Email: <%= u.email %>
      Age: <%= u.age %>
    <% end %>

    <h2> Todos </h2>
    <% @todos.each do |t| %>
      Task: <%= t.tasks %>
      Finished: <%= t.finished %>
    <% end %>
  </body>

</html>